#include<iostream>
using namespace std;
int main(){
    int choice=0;
    int a,b;
    cout<<"enter a choice from thw options;\n1.add \n2.sub \n3.mul \n3.div \n5.quit \n your choice:";
    cin>>choice;
    cout<<"enter 2 numbers";
    cin>>a>>b;
    switch(choice)
    {
        case 1:cout<<"sum = "<<a+b;
        break;
        case 2:cout<<"substraction is "<<a-b;
        break;
        case 3:cout<<"product= "<<a*b;
        break;
        case 4:cout<<"division= "<<a/b;
        break;
        case 5:exit(0);
        break;
        default:cout<<"invalid statement";
    }
}
